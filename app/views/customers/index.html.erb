<p id="notice"><%= notice %></p>
<div class="container-fluid">
  <div class="well">
    <div style="text-align: center">
      <span class="store-showheader"><%= button_to "Create New Customer", new_customer_path, method: :get, class: 'btn btn-primary'%> Customer Index</span>
    </div>
    <div class="container-fluid">
      <table id="datatable-basic" class="table table-striped table-bordered table-hover">
        <thead class="selection-header">
          <tr>
            <th><div style='width: 20px'></div></th>
            <th><div style='width: 90px'>First Name</div></th>
            <th><div style='width: 90px'>Last Name</div></th>
            <th><div style='width: 200px'>Company</div></th>
            <th><div style='width: 200px'>Address 1</div></th>
            <th><div style='width: 140px'>Address 2</div></th>
            <th><div style='width: 140px'>Address 3</div></th>
            <th><div style='width: 110px'>City</div></th>
            <th><div style='width: 50px'>State</div></th>
            <th><div style='width: 50px'>Zip</div></th>
            <th><div style='width: 90px'>Phone #</div></th>
            <th><div style='width: 200px'>Email</div></th>
            <th><div style='width: 170px'>Entry Creation Date</div></th>
            <th><div style='width: 170px'>Entry Last Updated</div></th>
          </tr>
        </thead>
        <tbody>
          <% @customers.each do |i| %>
            <tr>
              <td><%= button_to "View", customer_path(id: i.id), method: :get, class: 'btn btn-info' %></td>
              <td><%= i.firstname %></td>
              <td><%= i.lastname %></td>
              <td><%= i.company %></td>
              <td><%= i.address1 %></td>
              <td><%= i.address2 %></td>
              <td><%= i.address3 %></td>
              <td><%= i.city %></td>
              <td><%= i.state %></td>
              <td><%= i.zipcode %></td>
              <td><%= i.phone %></td>
              <td><%= i.email %></td>
              <td><%= i.created_at %></td>
              <td><%= i.updated_at %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>


<br>

<%= link_to 'New Customer', new_customer_path %>
