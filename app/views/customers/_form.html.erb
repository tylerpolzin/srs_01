      <% end %>
      </ul>
    </div>
  <% end %>
    <div class="form-horizontal">
      <div class="form-group">
        <%= f.label :firstname, "First Name:", class: 'col-sm-3 control-label' %>
        <div class="col-sm-9">
          <%= f.text_field :firstname, class: 'form-control' %>
        </div>
      </div>
      <div class="form-group">
        <%= f.label :lastname, "Last Name:", class: 'col-sm-3 control-label' %>
        <div class="col-sm-9">
          <%= f.text_field :lastname, class: 'form-control' %>
        </div>
      </div>
      <div class="form-group">
        <%= f.label :company, "Company:", class: 'col-sm-3 control-label' %>
        <div class="col-sm-9">
          <%= f.text_field :company, class: 'form-control' %>
        </div>
      </div>
      <div class="form-group">
        <%= f.label :address1, "Address 1:", class: 'col-sm-3 control-label' %>
        <div class="col-sm-9">
          <%= f.text_field :address1, class: 'form-control' %>
        </div>
      </div>
      <div class="form-group">
        <%= f.label :address2, "Address 2:", class: 'col-sm-3 control-label' %>
        <div class="col-sm-3">
          <%= f.text_field :address2, class: 'form-control' %>
        </div>
        <%= f.label :address3, "Address 3:", class: 'col-sm-3 control-label' %>
        <div class="col-sm-3">
          <%= f.text_field :address3, class: 'form-control' %>
        </div>
      </div>
      <div class="form-group">
        <%= f.label :city, "City:", class: 'col-sm-3 control-label' %>
        <div class="col-sm-9">
          <%= f.text_field :city, class: 'form-control' %>
        </div>
      </div>
      <div class="form-group">
        <%= f.label :state, "State:", class: 'col-sm-3 control-label' %>
        <div class="col-sm-4">
          <%= f.select :state, options_for_select(us_states),{}, class: 'form-control' %>
        </div>
        <%= f.label :zipcode, "Zip:", class: 'col-sm-2 control-label' %>
        <div class="col-sm-3">
          <%= f.text_field :zipcode, class: 'form-control' %>
        </div>
      </div>
      <div class="form-group">
        <%= f.label :phone, "Phone #:", class: 'col-sm-3 control-label' %>
        <div class="col-sm-9">
          <%= f.text_field :phone, class: 'form-control' %>
        </div>
      </div>
      <div class="form-group">
        <%= f.label :email, "Email:", class: 'col-sm-3 control-label' %>
        <div class="col-sm-9">
          <%= f.text_field :email, class: 'form-control' %>
        </div>
      </div>
      <div class="form-group">
        <div class="col-sm-12">
          <%= f.submit "Create Customer", class: 'btn btn-primary' %>
        </div>
      </div>
    </div>
<% end %>
