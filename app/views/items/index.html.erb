<div class="container-fluid">
  <div class="well">
    <div style="text-align: center">
      <span class="store-showheader"><%= button_to "Create New Item", new_item_path, method: :get, class: 'btn btn-primary'%> Item Index</span>
    </div>
    <div class="container-fluid">
      <table id="datatable-basic" class="table table-striped table-bordered table-hover">
        <thead class="selection-header">
          <tr>
            <th><div style='width: 20px'></div></th>
            <th><div style='width: 60px'>Vendor</div></th>
            <th><div style='width: 70px'>Model #</div></th>
            <th><div style='width: 70px'>Part #</div></th>
            <th><div style='width: 50px'>UPC</div></th>
            <th><div style='width: 190px'>Product Description</div></th>
            <th><div style='width: 60px'>Weight</div></th>
            <th><div style='width: 60px'>Location</div></th>
            <th><div style='width: 50px'>On Hand</div></th>
            <th><div style='width: 50px'>Active?</div></th>
            <th><div style='width: 90px'>Store Orderable?</div></th>
            <th><div style='width: 170px'>Entry Creation Date</div></th>
            <th><div style='width: 170px'>Entry Last Updated</div></th>
          </tr>
        </thead>
        <tbody>
          <% @items.each do |i| %>
            <tr>
              <td><%= button_to "View", item_path(id: i.id), method: :get, class: 'btn btn-info' %></td>
              <td><%= i.vendor_name %></td>
              <td><%= i.model_number %></td>
              <td><%= i.part_number %></td>
              <td><%= i.upc %></td>
              <td><%= i.description %></td>
              <td><%= i.weight %></td>
              <td><%= i.location %></td>
              <td><%= i.count_on_hand %></td>
              <td><%= i.active %></td>
              <td><%= i.store_orderable %></td>
              <td><%= i.created_at %></td>
              <td><%= i.updated_at %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
