<script>
$(document).ready(function() {
    $('#user-list').DataTable( {
      "scrollX": true
    });
} );
</script>

<div class="container-fluid">
  <div class="col-md-6 col-md-offset-3">
    <div class="row">
      <div class="well">
        <h1>User List</h1>
        <table id="user-list" class="table table-striped table-bordered table-hover">
          <thead bgcolor="#969696" style="color: white">
            <tr>
              <th>UID</th>
              <th>Email (Login)</th>
              <th>User Created At</th>
              <th>User Last Update</th>
            </tr>
          </thead>
          <tbody>
            <% @users.each do |u| %>
            <tr>
              <td><%= u.id %></td>
              <td><%= u.email %></td>
              <td><div style='width: 170px'><%= u.created_at %></div></td>
              <td><div style='width: 170px'><%= u.updated_at %></div></td>
            </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>