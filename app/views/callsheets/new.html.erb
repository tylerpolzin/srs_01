<div class="col-md-7 col-md-offset-3">
  <div class="well">
    <legend class="text-center">Menards Call Sheets</legend>
    <div class="form-horizontal">
      <label class="col-md-3 control-label" for="store_location">Store Location</label>
        <div class="col-md-9">
          <select id="store_location" name="store_location" class="form-control">
            <option value="store_null">Select Location ...</option>
              <% @repstores.each do |s| %>
              <option value="store">Store #<%= s.yard %>, <%= s.name %></option>
              <% end %>
          </select>
        </div><br><br><br>
      <ul class="nav nav-tabs">
          <li class="active"><a data-toggle="tab" href="#tabs-1">Colonial Elegance</a></li>
          <li><a data-toggle="tab" href="#tabs-2">Genie</a></li>
          <li><a data-toggle="tab" href="#tabs-3">Honeywell</a></li>
          <li><a data-toggle="tab" href="#tabs-4">Summit Brands</a></li>
          <li><a data-toggle="tab" href="#tabs-5">All Stone</a></li>
          <li><a data-toggle="tab" href="#tabs-6">Tuscany</a></li>
      </ul>
      <div class="tab-content">
        <div id="tabs-1" class="tab-pane fade in active">
          <%= render 'colonialelegance' %>
        </div>
        <div id="tabs-2" class="tab-pane fade in">
          <%= render 'genie' %>
        </div>
        <div id="tabs-3" class="tab-pane fade in">
          <%= render 'honeywell' %>
        </div>
        <div id="tabs-4" class="tab-pane fade in">
          <%= render 'summit' %>
        </div>
        <div id="tabs-5" class="tab-pane fade in">
          <%= render 'allstone' %>
        </div>
        <div id="tabs-6" class="tab-pane fade in">
          <%= render 'tuscany' %>
        </div>
      </div>
      <div class="form-group">
        <label class="col-md-6 control-label" for="cs_buttons"><br>Process Data</label>
        <div class="col-md-6">
          <br><button id="cs_save" name="cs_save" class="btn btn-success">Save</button>
          <button id="cs_submit" name="cs_submit" class="btn btn-primary">Submit</button>
          <button id="cs_reset" name="cs_reset" class="btn btn-danger">Reset</button>
        </div>
      </div>
    </div
  </div>
</div>