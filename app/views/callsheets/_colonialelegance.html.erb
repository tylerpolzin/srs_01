<div class="form-group">
  <label class="col-md-3 control-label" for="millwork_manager"><br>Department Manager: </label>
  <div class="col-md-9">                     
    <br><input id="millwork_manager" name="millwork_manager" placeholder="Millwork Manager and/or Building Materials Manager" type="text" class="form-control input-md">
  </div>
</div>
<form class="form-horizontal">
  <div class="container-fluid">
    <div class="col-md-4">
      <table class="table table-striped table-bordered table-hover">
        <thead bgcolor="#969696" style="color: white">
          <tr>
            <th></th>
            <th>Stair Displays condition</th>
          </tr>
        </thead>
        <tbody>
          <tr>
            <td>
              <label class="switch-check" name="ceSdc">
                <input type="radio", name="ceSdc", id="ceSdc-1", value="1">
                <div class="slider-check round"></div>
              </label>
            </td>
            <td>Undamaged</td>
          </tr>
          <tr>
            <td>
              <label class="switch-check" name="ceSdc">
                <input type="radio", name="ceSdc", id="ceSdc-2", value="2">
                <div class="slider-check round"></div>
              </label>
            </td>
            <td>Damaged, see notes below</td>
          </tr>
        </tbody>
      </table>
    </div>
    <div class="col-md-4">
      <table class="table table-striped table-bordered table-hover">
        <thead bgcolor="#969696" style="color: white">
          <tr>
            <th colspan="2">Bin Boxes condition</th>
          </tr>
        </thead>
        <tbody>
          <tr>
            <td>
              <label class="switch-check" name="ceBins">
                <input type="radio", name="ceBins", id="ceBins-1", value="1">
                <div class="slider-check round"></div>
