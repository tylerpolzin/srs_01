    <div class="col-md-4">
      <table class="table table-striped table-bordered table-hover">
        <thead bgcolor="#969696" style="color: white">
          <tr>
            <th colspan="2">Closet Door Display condition</th>
          </tr>
        </thead>
        <tbody>
          <tr>
            <td>
              <label class="switch-check" name="ceCloset">
                <input type="radio", name="ceCloset", id="ceCloset-1", value="1">
                <div class="slider-check round"></div>
              </label>
            </td>
            <td>Undamaged</td>
          </tr>
          <tr>
            <td>
              <label class="switch-check", name="ceCloset">
                <input type="radio", name="ceCloset", id="ceCloset-2", value="2">
