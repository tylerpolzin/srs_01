<div class="container-fluid">
  <div class="col-md-4 col-md-offset-4">
    <div class="well dashboard-well">
      <div class="row">
      <p class="text-center callsheet-header">Callsheet Dashboard</p>
        <div class="col-md-12">
          <div class="well dashboard-inner-well top-well">
            <div class="form-horizontal">
<!-- Start New Callsheet -->
              <p class="text-center dashboard-header">Start New Callsheet</p><br>
              <label class="col-md-4 control-label" for="storeSelect">Store Location</label>
              <div class="col-md-8">
                <select id="newStoreSelect" name="newStoreSelect" class="form-control">
                  <option value="">Select Location ...</option>
                    <% @repstores.each do |s| %>
                    <option value="<%= s.id %>" name="<%= s.name.titleize %>" abbrv="<%= s.abbrv %>" yard="<%= s.yard %>"><%= s.name.titleize %> (<%= s.abbrv %> #<%= s.yard %>)</option>
                    <% end %>
                </select><br>
              </div>
              <label class="col-md-4 control-label" for="datepicker">Date of Visit</label>
              <div class="col-md-8">
                <div id="datecontainer">
                  <input type="text" placeholder="Select Date..." id="datepicker" class="form-control"><br>
                </div>
              </div>
              <%= form_for @newcallsheet, url: new_callsheets_path, remote: true, :html => {:multipart => true} do |f| %>
                <%= f.hidden_field :store_id, :id => 'newStoreSelectHidden' %>
                <%= f.hidden_field :store_number, :id => 'newStoreNumberHidden' %>
                <%= f.hidden_field :store_abbrv, :id => 'newStoreAbbrvHidden' %>
                <%= f.hidden_field :store_name, :id => 'newStoreNameHidden' %>
                <%= f.hidden_field :callsheet_date, :id => 'datepickerHidden' %>
                <%= f.submit "START", :id => "newCallsheet", :name => "newCallsheet", class: 'btn btn-success' %>
              <% end %>
            </div>
          </div>
        </div>
<!-- Callsheets Pending Submission -->
        <div class="col-md-12">
          <div class="well dashboard-inner-well">
            <div class="form-horizontal">
                <p class="text-center dashboard-header">Callsheets Pending Submission</p><br>
                <div class="col-md-10">
                  <select multiple id="storeEditSelect" name="storeEditSelect" class="form-control">
                    <option value="" label=" "></option>
                      <% @activesheets.each do |s| %>
                      <option value="<%= s.id %>"><%= s.visit_date %>, <%= s.store_name %> (<%= s.store_abbrv %> #<%= s.store_number %>)</option>
                      <% end %>
                  </select><br>
                </div>
                <button id="loadPendingCallsheet" name="loadPendingCallsheet" class="btn btn-primary">LOAD</button>
            </div>
          </div>
        </div>
<!-- Submitted Callsheets -->
        <div class="col-md-12">
          <div class="well dashboard-inner-well">
            <div class="form-horizontal">
                <p class="text-center dashboard-header">Submitted Callsheets</p><br>
                <div class="col-md-8">
                  <select id="storeCompleteSelect" name="storeCompleteSelect" class="form-control">
                    <option value="">Select Callsheet ...</option>
                      <% @completesheets.each do |s| %>
                      <option value="<%= s.id %>"><%= s.visit_date %>, <%= s.store_name %> (<%= s.store_abbrv %> #<%= s.store_number %>)</option>
                      <% end %>
                  </select><br>
                </div>
                <button id="loadSubmittedCallsheet" name="loadSubmittedCallsheet" class="btn btn-primary">VIEW SUMMARY</button>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>