<div class="container-fluid">
  <div class="col-md-6 col-md-offset-3">
    <div class="well dashboard-well">
      <div class="row">
        <div class="col-md-7">
          <div class="well">
            <div class="form-horizontal">
              <legend class="text-center">Start New Callsheet</legend>
                <label class="col-md-4 control-label" for="storeSelect">Store Location</label>
                <div class="col-md-8">
                  <select id="newStoreSelect" name="newStoreSelect" class="form-control">
                    <option value="">Select Location ...</option>
                      <% @repstores.each do |s| %>
                      <option value="<%= s.id %>" name="<%= s.name.titleize %>" abbrv="<%= s.abbrv %>" yard="<%= s.yard %>"><%= s.name.titleize %> (<%= s.abbrv %> #<%= s.yard %>)</option>
                      <% end %>
                  </select><br>
                </div>
                <label class="col-md-4 control-label" for="datepicker">Date of Visit</label>
                <div class="col-md-8">
                  <div id="datecontainer">
                    <input type="text" placeholder="Select Date..." id="datepicker" class="form-control">
                  </div>
                </div>
                <%= form_for @newcallsheet, url: new_callsheets_path, remote: true, :html => {:multipart => true} do |f| %>
                <div class="form-group">
                  <div class="col-md-8">
                    <table id="newcallsheet_table" class="hidden">
                      <tr>
                        <th>id</th>
                      </tr>
                      <tr>
                        <td><%= f.text_field :store_id, :id => 'newStoreSelectHidden' %></td>
                        <td><%= f.text_field :store_number, :id => 'newStoreNumberHidden' %></td>
                        <td><%= f.text_field :store_abbrv, :id => 'newStoreAbbrvHidden' %></td>
                        <td><%= f.text_field :store_name, :id => 'newStoreNameHidden' %></td>
                        <td><%= f.text_field :callsheet_date, :id => 'datepickerHidden' %></td>
                      </tr>
                    </table>
                  </div>
                </div>
  
  
                <%= f.submit "START", :id => "newCallsheet", :name => "newCallsheet", class: 'btn btn-success' %>
                <% end %>
            </div>
          </div>
        </div>
        <div class="form-horizontal">
          <div class="col-md-5">
            <div class="well">
              <div class="form-horizontal">
                <legend class="text-center">Callsheets Pending Submission</legend>
                <select id="storeEditSelect" name="storeEditSelect" class="form-control">
                  <option value="">Select Callsheet ...</option>
                    <% @activesheets.each do |s| %>
                    <option value="<%= s.id %>">Visit Date: <%= s.visit_date %>, <%= s.store_name %> (<%= s.store_abbrv %> #<%= s.store_number %>)</option>
                    <% end %>
                </select><br>
                <button id="loadPendingCallsheet" name="loadPendingCallsheet" class="btn btn-primary">LOAD</button>
              </div>
            </div>
          </div>
          <div class="col-md-5">
            <div class="well">
              <div class="form-horizontal">
                <legend class="text-center">Submitted Callsheets</legend>
                <select id="storeCompleteSelect" name="storeCompleteSelect" class="form-control">
                  <option value="">Select Callsheet ...</option>
                    <% @completesheets.each do |s| %>
                    <option value="<%= s.id %>">Visit Date: <%= s.visit_date %>, <%= s.store_name %> (<%= s.store_abbrv %> #<%= s.store_number %>)</option>
                    <% end %>
                </select><br>
                <button id="loadSubmittedCallsheet" name="loadSubmittedCallsheet" class="btn btn-primary">VIEW SUMMARY</button>
              </div>
            </div>
          </div>
          
        </div>
      </div>

    </div>
  </div>
</div>