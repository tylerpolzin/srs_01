<div class="container-fluid">
  <div class="well well-sm show-well">
    <p class="store-showheader text-center">Master Menards Store List</p><br>
    <div class="container-fluid">
      <table id="datatable-basic" class="table table-striped table-bordered table-hover">
        <thead class="selection-header">
          <tr>
            <th><div style='width: 20px'></div></th>
            <th><div style='width: 50px'>Yard</div></th>
            <th><div style='width: 50px'>Abbrv</div></th>
            <th><div style='width: 70px'>Name</div></th>
            <th><div style='width: 50px'>Proto</div></th>
            <th><div style='width: 190px'>Address</div></th>
            <th><div style='width: 80px'>City</div></th>
            <th><div style='width: 45px'>State</div></th>
            <th><div style='width: 50px'>Zip</div></th>
            <th><div style='width: 50px'>Phone</div></th>
            <th><div style='width: 110px'>Service Rep</div></th>
            <th><div style='width: 75px'>Last Visit</div></th>
            <th><div style='width: 350px'>Notes</div></th>
            <th><div style='width: 170px'>Entry Creation Date</div></th>
            <th><div style='width: 170px'>Entry Last Update</div></th>
            <th><div style='width: 50px'>Latitude</div></th>
            <th><div style='width: 50px'>Longitude</div></th>
            <th><div style='width: 40px'>UID</div></th>
          </tr>
        </thead>
        <tbody>
          <% @stores.each do |store| %>
            <tr>
              <td><%= button_to "View", store_path(id: store.id), method: :get, class: 'btn btn-info' %></td>
              <td><%= store.yard %></td>
              <td><%= store.abbrv %></td>
              <td><%= store.name %></td>
              <td><%= store.prototype %></td>
              <td><%= store.address %></td>
              <td><%= store.city %></td>
              <td><%= store.state %></td>
              <td><%= store.zipcode %></td>
              <td><%= store.phone %></td>
              <td><%= store.service_rep %></td>
              <td><%= store.lastvisit %></td>
              <td><%= store.notes %></td>
              <td><%= store.created_at %></td>
              <td><%= store.updated_at %></td>
              <td><%= store.lat %></td>
              <td><%= store.long %></td>
              <td><%= store.user_id %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
