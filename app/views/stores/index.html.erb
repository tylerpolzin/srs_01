<script>
$(document).ready(function() {
    $('#store-table').DataTable( {
      "scrollX": true
    });
} );
</script>


<div class="container-fluid">
  <div class="well">
    <h1 class="text-center">
      <h1>Store List</h1>
    <div class="container-fluid">
      <table id="store-table" class="table table-striped table-bordered table-hover">
        <thead bgcolor="#969696" style="color: white">
          <tr>
            <th><div style='width: 20px'>Yard</div></th>
            <th><div style='width: 20px'>Abbv</div></th>
            <th><div style='width: 70px'>Name</div></th>
            <th><div style='width: 50px'>Prototype</div></th>
            <th><div style='width: 190px'>Address</div></th>
            <th><div style='width: 80px'>City</div></th>
            <th><div style='width: 25px'>State</div></th>
            <th><div style='width: 50px'>Zip</div></th>
            <th><div style='width: 50px'>Phone</div></th>
            <th><div style='width: 110px'>Service Rep</div></th>
            <th><div style='width: 75px'>Last Visit</div></th>
            <th><div style='width: 350px'>Notes</div></th>
            <th><div style='width: 170px'>Entry Creation Date</div></th>
            <th><div style='width: 170px'>Entry Last Update</div></th>
            <th><div style='width: 50px'>Latitude</div></th>
            <th><div style='width: 50px'>Longitude</div></th>
            <th><div style='width: 40px'>UID</div></th>
          </tr>
        </thead>
        <tbody>
          <% @stores.each do |store| %>
            <tr>
              <td><%= store.yard %></td>
              <td><%= store.abbrv %></td>
              <td><%= store.name %></td>
              <td><%= store.prototype %></td>
              <td><%= store.address %></td>
              <td><%= store.city %></td>
              <td><%= store.state %></td>
              <td><%= store.zipcode %></td>
              <td><%= store.phone %></td>
              <td><%= store.service_rep %></td>
              <td><%= store.lastvisit %></td>
              <td><%= store.notes %></td>
              <td><%= store.created_at %></td>
              <td><%= store.updated_at %></td>
              <td><%= store.lat %></td>
              <td><%= store.long %></td>
              <td><%= store.user_id %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
